{
  // "extends": "tsconfig/base.json",
  "compilerOptions": {
    "module": "nodenext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules"]
}
